<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="#E7F0FD"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="추천"
            android:textColor="#4384E5"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="신용"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="대환"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="서민지원"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="비상금"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="자동차 구"
            android:textSize="12sp" />

    </LinearLayout>

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:elevation="10dp"
        app:cornerRadius="4dp"
        app:shadowDy="10"
        app:shadowMarginBottom="16dp"
        app:shadowMarginLeft="16dp"
        app:shadowMarginRight="16dp"
        app:shadowMarginTop="16dp"
        app:shadowRadius="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sendMoneyCard"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_round_square_white">

            <ImageView
                android:id="@+id/lotteImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_lotte"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lotteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="롯데캐피탈"
                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@id/lotteImg"
                app:layout_constraintTop_toTopOf="@id/lotteImg" />

            <TextView
                android:id="@+id/sinyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신용대출"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/lotteName"
                app:layout_constraintTop_toBottomOf="@id/lotteName" />

            <TextView
                android:id="@+id/iza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/spoqa_han_sans_bold"
                android:text="5.9 ~ 19.9%"
                android:textColor="#4384E5"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/sim"
                app:layout_constraintLeft_toLeftOf="@id/lotteName" />

            <TextView
                android:id="@+id/sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="준법 감시인 심의필 1007-017호"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/lotteName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_round_square"
                android:backgroundTint="#4384E5"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="나의 한도 확인"
                android:textColor="#fff"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.loopeer.shadow.ShadowView>

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:elevation="10dp"
        app:cornerRadius="4dp"
        app:shadowDy="10"
        app:shadowMarginBottom="16dp"
        app:shadowMarginLeft="16dp"
        app:shadowMarginRight="16dp"
        app:shadowMarginTop="16dp"
        app:shadowRadius="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_round_square_white">

            <ImageView
                android:id="@+id/lotteImg_"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:src="@drawable/sbi"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
