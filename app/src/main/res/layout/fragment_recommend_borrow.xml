            <TextView
                android:id="@+id/iza__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:text="5.9 ~ 19.9%"
                android:textColor="#4384E5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/sim__"
                app:layout_constraintLeft_toLeftOf="@id/lotteName__" />

            <TextView
                android:id="@+id/sim__"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="준법 감시인 심의필 1007-017호"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/lotteName__" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_round_square"
                android:backgroundTint="#4384E5"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="나의 한도 확인"
                android:textColor="#fff"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.loopeer.shadow.ShadowView>


    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:elevation="10dp"
        app:cornerRadius="4dp"
        app:shadowDy="10"
        app:shadowMarginBottom="16dp"
        app:shadowMarginLeft="16dp"
        app:shadowMarginRight="16dp"
        app:shadowMarginTop="16dp"
        app:shadowRadius="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_round_square_white">

            <ImageView
                android:id="@+id/lotteImg___"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:src="@drawable/daesin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lotteName___"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:text="대신저축은행"
                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@id/lotteImg___"
